{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Note",
    "scopeName": "source.note",
    "fileTypes": ["todo", "txt"],
    "patterns": [
        {
            "match": "^\\s*(#.*)",
            "captures": {
                "1": { "name": "comment.line.note" }
            }
        },
        {
            "match": "^\\s*(x\\s+.*)",
            "captures": {
                "1": { "name": "entity.name.function.note" }
            }
        },
        {
            "match": "^\\s*(\\?\\s+.*)",
            "captures": {
                "1": { "name": "support.function.note" }
            }
        },
        {
            "match": "^\\s*(~\\s+.*)",
            "captures": {
                "1": { "name": "support.constant.note" }
            }
        },
        {
            "match": "^\\s*(%\\s+.*)",
            "captures": {
                "1": { "name": "string.note" }
            }
        },
        {
            "match": "^\\s*(-\\s+.*)",
            "captures": {
                "1": { "name": "variable.parameter.note" }
            }
        },
        {
            "match": "^\\s*(!\\s+.*)",
            "captures": {
                "1": { "name": "keyword.note" }
            }
        },
        {
            "match": "^\\s*(!!\\s+.*)",
            "captures": {
                "1": { "name": "invalid.illegal.note" }
            }
        }
    ],
    "uuid": "d4cc42b4-8293-45f2-a7d6-5ec2e349b6c8"
}
